<view class="cu-card article {{isCard?'no-card':''}}" wx:for="{{recArr}}" wx:key="{{item.id}}" bindtap="goList">
  <view class="cu-item shadow" bindtap="goDetail" data-detailid="{{item.id}}">
    <view class="title">
      <view class="text-cut">{{item.prodName}}</view>
    </view>
    <view class="content">
      <image src="{{item.img}}" mode="aspectFill"></image>
      <view class="desc">
        <view class="text-content"> {{item.content}}</view>
        <view>
          <view class="cu-tag bg-red light sm round">促销价{{unit}}</view>
          <view class="cu-tag bg-green light sm round">{{item.price}}</view>
        </view>
      </view>
    </view>
    </view>
    </view>