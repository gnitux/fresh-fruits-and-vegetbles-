<!--pages/registered/registered.wxml-->
<view class="background">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">用户名</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{ user }}" bindinput="user" placeholder="用户名" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">密码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{ pwd }}" bindinput="pwd" placeholder="密码" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input"  type="number" value="{{ phone }}" bindinput="phone" placeholder="手机号" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">收货地址</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{ addr }}" bindinput="addr" placeholder="收货地址" />
      </view>
    </view>
  </view>
  <button type="primary" bindtap='submite'>注册</button>
</view>