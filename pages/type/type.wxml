<view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 商品分类
    </view>
  </view>
  <view  class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}}" wx:for="{{recArr}}" wx:key="{{item.value}}" bindtap="goList" data-detailid="{{item.dictValue}}">
    <view class="cu-item {{menuArrow?'arrow':''}}">
      <view class="content">
        <text class="cuIcon-circlefill text-grey"></text>
        <text class="text-grey">{{item.dictLabel}}</text>
      </view>
    </view>

  </view>